<div class="flex flex-col items-center">
  <img class="w-48 h-48 dark:border-gray-800" src="/plugin_assets/redmine_asap_theme/images/undraw_no_data.svg" />
  <div class="mt-8 text-center">
    <h3 class="text-lg font-medium py-4"><%= textilizable Setting.welcome_text %></h3>
    <p class="text-left"><%=l(:no_project)%></p>
  </div>
  <div class="flex mt-12">
    <% if User.current.allowed_to?(:add_project, nil, :global => true) %>
      <%= link_to new_project_path, :class => 'bg-blue-900 mr-4 hover:bg-blue-800 rounded flex items-center justify-center text-blue-100 shadow p-4 ' do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
        <span class="ml-4"><%=l(:label_project_new)%></span>
      <% end %>
    <% end %>
    <%= link_to projects_path, :class => 'bg-blue-900 hover:bg-blue-800 rounded flex items-center justify-center text-blue-100 shadow p-4' do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
      </svg>
      <span class="ml-4"><%=l(:label_project_all)%></span>
    <% end %>
  </div>
</div>