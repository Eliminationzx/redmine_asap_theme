<div class="ml-14 md:ml-60">
  <div class="bg-white dark:bg-slate-700 shadow">
    <div data-controller="contextual" class="contextual px-4 container mx-auto  py-2 grid grid-cols-1 md:grid-cols-3 justify-items-stretch gap-0 w-full">
      <div class="py-2">
        <%= title [l(:label_group_plural), groups_path], l(:label_group_new) %>
      </div>
      <div></div>
      <div class="flex w-full justify-end">
      </div>
    </div>
  </div>

  <div class="mx-4">
    <%= labelled_form_for @group, :html => {:multipart => true} do |f| %>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <p>
      <%= f.submit l(:button_create) %>
      <%= f.submit l(:button_create_and_continue), :name => 'continue' %>
    </p>
    <% end %>
  </div>
</div>