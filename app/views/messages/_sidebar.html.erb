<aside id="sidebar" data-sidebar-target="sidebar" class="w-96 z-50 shadow-lg p-8 bg-white border-l border-gray-50 dark:bg-gray-800 fixed top-14 right-0 h-full hidden">
  <% if User.current.allowed_to?(:add_message_watchers, @project) ||
    (@topic.watchers.present? && User.current.allowed_to?(:view_message_watchers, @project)) %>
    <div id="watchers">
      <%= render :partial => 'watchers/watchers', :locals => {:watched => @topic} %>
    </div>
  <% end %>
</aside>