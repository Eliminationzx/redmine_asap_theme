<div class="ml-60">
  <div class="bg-white dark:bg-slate-700 shadow">
    <div data-controller="contextual" class="contextual px-4 py-2 grid grid-cols-3 justify-items-stretch gap-0 w-full">
      <div class="py-2">
        <%= title [l(@enumeration.option_name), enumerations_path], @enumeration.name %>
      </div>
      <div></div>
      <div class="flex w-full">

      </div>
    </div>
  </div>

  <div class="mx-4 pb-16">
    <%= labelled_form_for :enumeration, @enumeration, :url => enumeration_path(@enumeration), :html => {:method => :put, :multipart => true} do |f| %>
      <%= render :partial => 'form', :locals => {:f => f} %>
      <%= submit_tag l(:button_save) %>
    <% end %>
  </div>
</div>